{
  "name": "place-search",
  "version": "1.0.0",
  "description": "",
  "main": "dist/src/functions/*.js",
  "scripts": {
    "build": "esbuild src/functions/*.ts --bundle --platform=node --target=node22 --outdir=dist/src/functions --log-level=info --external:@azure/functions-core",
    "watch": "tsc -w",
    "clean": "rimraf dist",
    "start": "func start --port 7071",
    "dev": "concurrently --raw 'npm run watch' 'npm run start'",
    "test": "jest",
    "types:check": "tsc --noEmit"
  },
  "dependencies": {
    "@azure/cosmos": "^4.8.0",
    "@azure/functions": "^4.0.0",
    "@azure/identity": "^4.13.0",
    "doner_types": "file:../shared/doner_types",
    "uuid": "^11"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.0.0",
    "azure-functions-core-tools": "^4.x",
    "concurrently": "^9.2.1",
    "esbuild": "^0.27.2",
    "jest": "^29.7.0",
    "rimraf": "^6.1.2",
    "ts-jest": "^29.2.5",
    "typescript": "^5.9.3"
  }
}
