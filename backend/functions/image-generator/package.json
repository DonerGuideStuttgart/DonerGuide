{
  "name": "image-generator",
  "version": "1.0.0",
  "description": "",
  "main": "dist/src/functions/*.js",
  "scripts": {
    "build": "esbuild src/functions/*.ts --bundle --platform=node --target=node22 --outdir=dist/src/functions --log-level=info --external:@azure/functions-core",
    "watch": "tsc -w",
    "clean": "rimraf dist",
    "start": "func start --port 7075",
    "dev": "concurrently --raw 'npm run watch' 'npm run start'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "types:check": "tsc --noEmit"
  },
  "dependencies": {
    "@azure/cosmos": "^4.0.0",
    "@azure/functions": "^4.0.0",
    "@azure/identity": "^4.0.0",
    "@azure/storage-blob": "^12.0.0",
    "@google/genai": "^1.41.0",
    "doner_types": "file:../shared/doner_types"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "azure-functions-core-tools": "^4.x",
    "concurrently": "^9.0.0",
    "esbuild": "^0.20.0",
    "rimraf": "^5.0.0",
    "typescript": "^5.0.0"
  }
}
