{
  "name": "doenerguide-functions",
  "version": "1.0.0",
  "private": true,
  "description": "Azure Functions Monorepo with shared TypeScript package and multiple function apps.",
  "type": "commonjs",
  "workspaces": [
    "shared/doner_types",
    "place-search",
    "image-classifier",
    "llm-analyzer",
    "shops"
  ],
  "scripts": {
    "lint": "eslint . --cache",
    "lint:fix": "eslint . --fix --cache",
    "format": "prettier --write \"**/*.{ts,js,json,md}\" --cache",
    "format:check": "prettier --check \"**/*.{ts,js,json,md}\" --cache",
    "types:check": "npm run -ws types:check",
    "check": "npm run lint && npm run format:check && npm run types:check"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/jest": "^30.0.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "jest": "^30.2.0",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.49.0"
  },
  "engines": {
    "node": ">=22"
  },
  "license": "MIT"
}
